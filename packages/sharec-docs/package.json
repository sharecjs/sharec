{
  "name": "sharec-docs",
  "version": "3.0.0",
  "scripts": {
    "start:assets": "gulp",
    "start:content": "npx @11ty/eleventy --input=src --output=dist --watch",
    "build": "rimraf dist && yarn build:assets && yarn build:content",
    "build:assets": "gulp build",
    "build:content": "npx @11ty/eleventy --input=src --output=dist",
    "deploy": "npm run build && node ./scripts/deploy.js",
    "lint": "eslint 'src/**/*.{js,jsx,json}'"
  },
  "author": "Konstantin Epishev <konstantin@epishev.me>",
  "license": "MIT",
  "repository": "https://github.com/sharecjs/sharec",
  "browserslist": [
    "last 2 version",
    "> 1%"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "corejs": "3.1.4",
          "useBuiltIns": "usage"
        }
      ]
    ]
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "postcss-nested": {},
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "autoprefixer": "^10.4.2",
    "dayjs": "^1.8.15",
    "gh-pages": "^3.1.0",
    "gulp": "^4.0.2",
    "gulp-cssnano": "^2.1.3",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^8.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-plumber-error-handler": "^1.0.0",
    "gulp-postcss": "^9.0.1",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-svgmin": "^4.1.0",
    "gulp-svgstore": "^9.0.0",
    "markdown-it": "^12.3.2",
    "postcss": "^8.4.7",
    "postcss-import": "^14.0.2",
    "postcss-nested": "^5.0.6",
    "rimraf": "^3.0.2",
    "yaml-front-matter": "^4.1.1"
  },
  "dependencies": {
    "reset.css": "^2.0.2",
    "tailwindcss": "^3.0.23"
  }
}
